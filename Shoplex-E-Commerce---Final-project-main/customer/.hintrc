{
  "extends": [
    "development"
  ],
  "hints": {
    "axe/text-alternatives": "off",
    "axe/forms": [
      "default",
      {
        "select-name": "off",
        "label": "off"
      }
    ],
    "axe/name-role-value": [
      "default",
      {
        "button-name": "off",
        "link-name": "off"
      }
    ],
    "apple-touch-icons": "off",
    "compat-api/css": [
      "default",
      {
        "ignore": [
          "text-wrap",
          "text-wrap: nowrap"
        ]
      }
    ],
    "button-type": "off",
    "no-inline-styles": "off"
  }
}